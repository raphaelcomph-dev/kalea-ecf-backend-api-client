{
    "name": "kalea-ecf-backend-api-client",
    "version": "1.1.0.2-SNAPSHOT",
    "description": "",
    "author": "Raphael Soares <raphael@comph.dev> (http://raphael.comph.dev/)",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "docker:up": "docker-compose up",
        "build": "nest build && npm run copy:resources",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "copy:resources": "cpx 'src/resources/**' 'dist/resources'",
        "start:local": "NODE_ENV=local nest start --watch ",
        "start:local:debug": "NODE_ENV=local nest start --debug --watch",
        "start:qa": "NODE_ENV=qa nest start --watch",
        "start:qa:debug": "NODE_ENV=qa nest start --debug --watch",
        "start:qa:from-build": "NODE_ENV=qa node dist/main",
        "start:prod": "NODE_ENV=prod nest start --watch",
        "start:prod:debug": "NODE_ENV=prod nest start --debug --watch",
        "start:build": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "fb:build": "tsc",
        "fb:build:watch": "tsc --watch",
        "fb:serve": "npm run build && firebase emulators:start --only functions",
        "fb:shell": "npm run build && firebase functions:shell",
        "fb:start": "npm run shell",
        "fb:deploy:all": "firebase deploy --only functions:kalea_ecf_backend_api_client",
        "fb:deploy:qa": "firebase deploy --only functions:kalea_ecf_backend_api_client.qa",
        "fb:deploy:prod": "firebase deploy --only functions:kalea_ecf_backend_api_client.prod",
        "fb:logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "main": "dist/main-firebase.js",
    "dependencies": {
        "@nestjs-modules/mailer": "^1.11.2",
        "@nestjs/axios": "^3.0.2",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.3.1",
        "@nestjs/terminus": "^10.2.3",
        "@nestjs/typeorm": "^10.0.2",
        "axios": "^1.6.7",
        "busboy": "^1.6.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cpx2": "^7.0.1",
        "dayjs": "^1.11.10",
        "dotenv": "^16.4.5",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^4.7.0",
        "mailersend": "^2.2.0",
        "mssql": "^10.0.2",
        "nodemailer": "^6.9.11",
        "pkginfo": "^0.4.1",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.3",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.14",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.*spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
